<div id="collection">

  {% paginate collection.products by settings.pagination_limit %}

    <header>
      <!-- Begin breadcrumb -->
      <div class="breadcrumb">
        <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="{{ shop.url }}/collections/all" title="{{ shop.name | escape }}" itemprop="url"><span itemprop="title">Collections</span></a></span>
        <span class="arrow-space">&#62;</span>
        <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
          {% if collection %}
            <a href="{{ collection.url }}" title="{{ collection.title | escape }}">{{ collection.title }}</a>
          {% else %}
            <a href="/collections/all" title="All Products">Products</a>
          {% endif %}
        </span>
      </div>

    	{% include 'pagination' %}
    </header>

    <!-- Begin no products -->
    {% if collection.products.size == 0 %}
    	{% unless collection.title == "Frontpage" %}
        <p>No products found</p>
      {% endunless %}
    {% endif %}

    {% if settings.use-orbit and collection.title == 'Frontpage' %}
      {% include 'slideshow' %}
  	{% endif %}

    <div class="products">
      {% for product in collection.products limit: settings.pagination_limit %}
        {% include 'product-loop' with collection.handle %}
      {% endfor %}
    </div>

    <footer>
      {% include 'pagination' %}
    </footer>

  {% endpaginate %}

</div>

{% include 'cart-link' %}
