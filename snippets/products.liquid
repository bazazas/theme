{% if collection == blank %}
  {% assign collection = products %}
{% endif %}

<div id="collection">

  {% paginate collection.products by settings.pagination_limit %}

  <header>
    {% if template != "index" %}
      {% include 'breadcrumb' %}
    {% endif %}
    {% include 'pagination' %}
  </header>

  {% if settings.use-orbit and collection.handle == 'frontpage' %}
    {% include 'slideshow' %}
  {% endif %}

  <div class="products">
    {% if collection.products.size == 0 and collection.handle != "frontpage"%}
      <p>No products found</p>
    {% endif %}

    {% for product in collection.products limit: settings.pagination_limit %}
      {% include 'product-loop' with collection.handle %}
    {% endfor %}
  </div>

  <footer>
    {% include 'pagination' %}
  </footer>

  {% endpaginate %}

</div>
