  padding: 0;
  margin: 0;
  border: 0;
  outline: none;
  vertical-align: top;
}

.fancybox-wrap {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 8020;
}

.fancybox-skin {
  position: relative;
  text-shadow: none;
}

.fancybox-opened {
  z-index: 8030;
}

.fancybox-outer, .fancybox-inner {
  position: relative;
}

.fancybox-inner {
  overflow: hidden;
}

.fancybox-type-iframe .fancybox-inner {
  -webkit-overflow-scrolling: touch;
}

.fancybox-error {
  color: #444;
  font: 14px/20px "Helvetica Neue",Helvetica,Arial,sans-serif;
  margin: 0;
  padding: 15px;
  white-space: nowrap;
}

.fancybox-image, .fancybox-iframe {
  display: block;
  width: 100%;
  height: 100%;
}

.fancybox-image {
  max-width: 100%;
  max-height: 100%;
}

.fancybox-close, .fancybox-prev span, .fancybox-next span {
  background-image: url({{ 'fancybox_sprite.png' | asset_url }});
}

#fancybox-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -22px;
  margin-left: -22px;
  background-position: 0 -108px;
  opacity: 0.8;
  cursor: pointer;
  z-index: 8060;
}

#fancybox-loading div {
  width: 44px;
  height: 44px;
  background: url({{ 'fancybox_loading.gif' | asset_url }}) center center no-repeat;
}

.fancybox-close {
  position: absolute;
  top: 40px;
  right: 40px;
  width: 25px;
  height: 25px;
  cursor: pointer;
  z-index: 8040;

  &:hover {
    background-position: -25px 0;
  }
}

.fancybox-nav {
  position: absolute;
  top: 0;
  width: 40%;
  height: 100%;
  cursor: pointer;
  text-decoration: none;
  background: transparent url({{ 'blank.gif' | asset_url }}); /* helps IE */
  z-index: 8040;
}

.fancybox-prev {
  left: 0;
}

.fancybox-next {
  right: 0;
}

.fancybox-nav span {
  position: absolute;
  top: 50%;
  width: 25px;
  height: 25px;
  margin-top: -12px;
  cursor: pointer;
  z-index: 8040;
  visibility: hidden;
}

.fancybox-prev span {
  left: 40px;
  background-position: 0 -50px;

  &:hover {
    background-position: -25px -50px;
  }
}

.fancybox-next span {
  right: 40px;
  background-position: 0 -25px;

  &:hover {
    background-position: -25px -25px;
  }
}

.fancybox-nav:hover span {
  visibility: visible;
}

.fancybox-tmp {
  position: absolute;
  top: -99999px;
  left: -99999px;
  visibility: hidden;
  max-width: 99999px;
  max-height: 99999px;
  overflow: visible !important;
}

/* Overlay helper */

.fancybox-lock {
    overflow: hidden !important;
    width: auto;
}

.fancybox-lock body {
    overflow: hidden !important;
}

.fancybox-lock-test {
    overflow-y: hidden !important;
}

.fancybox-overlay {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  display: none;
  z-index: 8010;
  background-color: rgba(255, 255, 255, 0.8)
}

.fancybox-overlay-fixed {
  position: fixed;
  bottom: 0;
  right: 0;
}

.fancybox-lock .fancybox-overlay {
  overflow: auto;
  overflow-y: scroll;
}

/* Title helper */

.fancybox-title {
  display: none;
}

.fancybox-frame {
  position: absolute;
  left: 80px;
  top: 80px;
  bottom: 80px;
  right: 80px;
  background-color: white;
  border: 5px solid rgb(0, 76, 41);
}

/* Retina graphics */
@media only screen and (-webkit-min-device-pixel-ratio: 1.5),
     only screen and (min--moz-device-pixel-ratio: 1.5),
     only screen and (min-device-pixel-ratio: 1.5){

  .fancybox-close, .fancybox-prev span, .fancybox-next span {
    background-image: url({{ 'fancybox_sprite@2x.png' | asset_url }});
    background-size: 50px 75px; /*The size of the normal image, half the size of the hi-res image*/
  }

  #fancybox-loading div {
    background-image: url({{ 'fancybox_loading@2x.gif' | asset_url }});
    background-size: 24px 24px; /*The size of the normal image, half the size of the hi-res image*/
  }
}

/* Faux Select */
.faux-select {
  display: inline-block;
  border: 1px solid $dark-green;
  border-width: 0 0 1px;
  padding: 0 10px;
  position: relative;

  a {
    cursor: pointer;
    display: block;
    white-space: nowrap;
  }

  a.placeholder:hover {
    color: $dark-green;
  }

  &.initialized .options {
    display: none;
  }

  &.active {

    .options {
      border: 1px solid $dark-green;
      display: block;
      position: absolute;
      top: -1px;
      left: -1px;
      width: 100%;
      background-color: white;
    }

  }

}

/* Article */

.template-article {
  @include fixed-social-buttons;
  background-color: white;

  .post {
    width: 700px;
    margin: 0 auto;
    padding-top: 70px;
  }

  &.blog-stories .social-buttons, &.blog-projects .social-buttons {
    width: 130px;

    .twitter {
      top: 0px;
    }

    .email {
      top: 100px;
    }

    .link {
      top: 200px;
    }

    .share {
      position: absolute;
      top: 300px;
      margin-left: -40px;

      background-image: url({{ 'sharev.png' | asset_url }});
      width: 87px;
      height: 225px;
      padding-top: 0;
      background-position: -88px center;

      @include on-devices {
        background-image: url({{ 'sharev@2x.png' | asset_url }});
        background-size: 175px 225px;
      }

      &:hover {
        background-position: 0 center;
      }

      div {
        height: 225px;
        width: 87px;
      }
    }
  }
}

/* Preload Images */
.preload {
  display: none;
}

/* Social links */
.social-links {
  display: none;
  position: fixed;
  top: 11px;
  right: 10px;
  width: 120px;

  h1 {
    text-align: center;
    text-transform: none;
    margin: 0.3em 0 1em;
    font-size: 16pt;
    line-height: 18pt;
  }

  .template-page &,
  .template-page-small & {
    display: block;
  }

  .is-mobile & {
    position: absolute;
  }

  .subscribe-link {
    @include schoolbook;
    font-size: 12pt;
    line-height: 11pt;
    margin: -5px 0 18px;
    text-transform: lowercase;
    letter-spacing: 2px;
    text-align: center;
    display: block;
  }

}

#mc_embed_signup {
  display: none;
}

.subscription-form {
  padding: 50px 0;
  text-align: center;

  .indicates-required {
    position: absolute;
    bottom: 10px;
    left: 0;
    width: 100%;
    margin-top: 20px;
    text-align: center;
  }

  .mc-field-group input {
    @include schoolbook;
    @include form-input;
    font-size: 16pt;
    border-color: $dark-green;
    width: 200px;
    background: none;
  }

  label {
    @include schoolbook;
    font-size: 12pt;
    line-height: 16pt;
    letter-spacing: 1px;
  }

  .button {
    @include avant-garde;
    font-weight: normal;
    font-size: 24pt;
    border: 1px solid rgb(0, 76, 41);
    background-color: rgb(0, 255, 55);
    color: rgb(0, 76, 41);
    text-transform: uppercase;
    padding: 10px 20px;
    letter-spacing: 3px;
    margin: 30px auto;
    cursor: pointer;
    display: inline-block;
    line-height: 32pt;

    &:hover {
      border-color: rgb(121, 5, 9);
      color: rgb(121, 5, 9);
      background-color: rgb(255, 242, 0);
    }
  }
}

.social {
  @include schoolbook;
  display: inline-block;
  font-size: 11pt;
  line-height: 16pt;
  text-transform: lowercase;
  letter-spacing: 2px;
  text-indent: -9999px;
  text-align: center;
  padding: 63px 0 10px;
  width: 120px;
  background-position: center 0;
  background-repeat: no-repeat;
  overflow: hidden;
  color: $dark-green;
  white-space: nowrap;

  @include on-devices {
    background-size: 60px 60px;
  }

  &:hover, &.zeroclipboard-is-hover {
    text-indent: 0;
    color: $dark-green !important;
  }

  &:active, &.active {
    @extend .smoosh;
  }

  .template-index & label {
    background-color: white;
    padding: 1px 3px 4px 5px;
  }
}

.smoosh {
  background-image: url({{ 'smoosh.png' | asset_url }});

  @include on-devices {
    background-image: url({{ 'smoosh@2x.png' | asset_url }});
  }
}

.twitter {
  background-image: url({{ 'twitter.png' | asset_url }});

  @include on-devices {
    background-image: url({{ 'twitter@2x.png' | asset_url }});
  }
}

.instagram {
  background-image: url({{ 'instagram.png' | asset_url }});

  @include on-devices {
    background-image: url({{ 'instagram@2x.png' | asset_url }});
  }
}

.tumblr {
  background-image: url({{ 'tumblr.png' | asset_url }});

  @include on-devices {
    background-image: url({{ 'tumblr@2x.png' | asset_url }});
  }
}

.email {
  background-image: url({{ 'email.png' | asset_url }});

  @include on-devices {
    background-image: url({{ 'email@2x.png' | asset_url }});
  }
}

.link {
  background-image: url({{ 'link.png' | asset_url }});

  @include on-devices {
    background-image: url({{ 'link@2x.png' | asset_url }});
  }

  .is-mobile & { display: none; }
}

.share {
  width: 225px;
  height: 88px;
  padding: 0;

  &, &:active {
    background-image: url({{ 'share.png' | asset_url }});

    @include on-devices {
      background-image: url({{ 'share@2x.png' | asset_url }});
      background-size: 225px 175px;
    }
  }

  &:hover {
    background-position: center -88px;
  }

  div {
    height: 88px;
    width: 225px;
  }

  &.plain-button {
    @include big-button($active-background: rgb(0, 255, 55),
                        $active-border: rgb(0, 76, 41),
                        $background: rgb(255, 242, 0),
                        $border: rgb(121, 5, 9),
                        $font-size: 16pt);
    background-image: none;

    &, & div {
      height: auto;
      width: auto;
      text-indent: 0;
    }
  }
}

.global-zeroclipboard-container {
  cursor: pointer;
}

/* Dont boost text sizes on mobile webkit */
@media screen and (max-device-width: 480px){
  body {
    -webkit-text-size-adjust: none;
  }
}

@media only screen and (-webkit-min-device-pixel-ratio: 1.5),
     only screen and (min--moz-device-pixel-ratio: 1.5),
     only screen and (min-device-pixel-ratio: 1.5){

		.template-blog-collabos .excerpt .social-buttons{
			visibility: visible;
			background-size: auto;

		}

		.template-blog-collabos .excerpt .social-buttons{
			background-size: auto;
		}

		.template-blog-collabos .link,
    .template-blog-collabos .share,
    .template-blog-collabos .email,
    .template-blog-collabos .twitter {
			background-size: auto;
			background-image: url({{ 'sprite.png' | asset_url }});
		}
}
