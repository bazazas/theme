$yellow:       rgb(255, 242, 0);
$light-yellow: rgb(252, 242, 57);
$green:        rgb(55, 174, 79);
$dark-green:   rgb(0, 76, 41);
$light-green:  rgb(0, 255, 55);
$brown:        rgb(121, 42, 15);

@mixin schoolbook {
  font-family: "CenturySchoolbookW01-Ro", "New Century Schoolbook", "Century Schoolbook", "Century Schoolbook L", Georgia, serif;
}

@mixin avant-garde {
  font-family: "AvantGardeGothicITCW01D 731075", sans-serif;
}

@mixin on-devices {
  @media only screen and (-webkit-min-device-pixel-ratio: 1.5),
      only screen and (min--moz-device-pixel-ratio: 1.5),
      only screen and (min-device-pixel-ratio: 1.5){
    @content;
  }
}

@mixin placeholder {
  &::-webkit-input-placeholder { @content; }
  &:-moz-placeholder { @content; } /* Firefox 18- */
  &::-moz-placeholder { @content; } /* Firefox 19+ */
  &:-ms-input-placeholder { @content; }
}

@mixin form-input {
  border: 1px solid $green;
  border-width: 0 0 1px;
  color: $dark-green;
  background-color: transparent;
  text-align: center;
  outline: none;

  &:focus, &.has-content {
    border-color: $dark-green;
  }

  @include placeholder {
    color: $green;
  }
}

@mixin fixed-social-buttons {
  .social-buttons {
    position: fixed;
    top: 20px;
    right: 20px;
    width: 225px;

    .social {
      position: absolute;
      left: 50%;
      margin-left: -50px;
      width: 100px;
    }

    .twitter {
      top: 120px;
    }

    .email {
      top: 220px;
    }

    .link {
      top: 320px;
    }

    .share {
      position: static;
      margin-left: 0;
      width: 225px;
    }

    .is-mobile & {
      position: absolute;
    }
  }
}

@mixin subtitle {
  @include schoolbook;
  font-size: 10pt;
  line-height: 13pt;
  text-transform: none;
  letter-spacing: 2px;
}

@mixin clearfix {
  &:after {
    content: "";
    display: table;
    clear: both;
  }
}

@mixin big-button($background: rgb(0, 255, 55),
                  $border: rgb(0, 76, 41),
                  $active-background: rgb(255, 242, 0),
                  $active-border: rgb(121, 5, 9),
                  $font-size: 24pt) {
  @include avant-garde;
  font-weight: normal;
  font-size: $font-size;
  border: 1px solid $border;
  background-color: $background;
  color: $border;
  text-transform: uppercase;
  padding: 5px 20px;
  letter-spacing: 2px;
  margin: 0 0 30px;
  cursor: pointer;
  display: inline-block;
  line-height: 32pt;
  @content;

  &:active,
  &:hover {
    border: 1px solid $active-border !important;
    color: $active-border !important;
    background-color: $active-background !important;
  }
}

